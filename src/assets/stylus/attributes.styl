#attributes
	.attributes-list
		display flex
		justify-content space-around

		.left, .right
			width 45%

		.index
			font-weight bold
			font-size 24px
			line-height 29px
			margin-left 15px
			margin-bottom 7px

		.items
			margin-left 5px
			margin-bottom 25px
			line-height 35px
			cursor pointer
			width 100%

			> .item
				margin-bottom 20px
				border 2px solid #E0E0E0
				max-height 39px

				transition all .2s linear

				.text
					margin-left 14px

				.check
					display inline-block
					position relative
					top 5px
					left -10px
					width 25px
					height 25px
					border 2px solid #E0E0E0
					border-radius 100%
					float right

					transition all .2s linear

					&::after
						content ''
						position relative
						left 5px
						top 4px
						width 12px
						height 9px
						border 6px solid #E0E0E0
						background-color #E0E0E0
						mask-repeat no-repeat
						-webkit-mask-repeat no-repeat
						mask-image url(../../assets/ok.svg)
						-webkit-mask-image url(../../assets/ok.svg)

						transition all .2s linear

				&:hover
					color var(--color)
					border-color var(--color)

					.check
						border-color var(--color)

						&::after
							border-color var(--color)
							background-color var(--color)

				&.selected
					color white
					border-color var(--color)
					background-color var(--color)

					.check
						border-color white

						&::after
							border-color white
							background-color white

					&::after
						content ''
						position relative
						left 8px
						top -18px
						width 0
						height 2px
						display block
						background-color white

						transition width .2s linear

					&:hover
						color white
						border-color var(--color)

						.check
							border-color white

							&::after
								border-color white
								background-color white

						&::after
							width 98%